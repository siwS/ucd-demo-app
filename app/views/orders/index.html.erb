<div class="container">
<h1>Orders Received</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Total Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.name %> <%= order.user.surname %></td>
        <td><%= order.product.product_code %></td>
        <td><%= order.quantity %></td>
        <td><%= order.total_price %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>